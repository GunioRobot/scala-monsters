<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>no.lau.sound-book</groupId>
    <artifactId>graph-gui-scala</artifactId>
    <version>0.1</version>
    <packaging>jar</packaging>

    <name>Sound Book</name>
    <description>This app rocks!</description>

    <url>http://localhost:8080</url>
    <organization>
        <name>Lau.no</name>
        <url>http://stig.lau.no</url>
    </organization>

    <properties>
        <scala.version>2.7.4</scala.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>net.sf</groupId>
            <artifactId>jgraphx</artifactId>
            <version>1.0.0.1</version>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>5.8</version>
            <classifier>jdk15</classifier>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <version>${scala.version}</version>
        </dependency>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-compiler</artifactId>
            <version>${scala.version}</version>
        </dependency>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-swing</artifactId>
            <version>${scala.version}</version>
        </dependency>


        <!-- KPRO dependencies -->
        <dependency>
            <groupId>no.bouvet.kpro</groupId>
            <artifactId>model</artifactId>
            <version>0.2</version>
        </dependency>
        <dependency>
            <groupId>no.bouvet.kpro</groupId>
            <artifactId>renderer</artifactId>
            <version>0.2</version>
        </dependency>
        <dependency>
            <groupId>no.bouvet.kpro</groupId>
            <artifactId>renderer.audio</artifactId>
            <version>0.2</version>
        </dependency>


    </dependencies>

    <repositories>
        <repository>
            <id>scala-tools.org</id>
            <name>Scala-tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-releases</url>
        </repository>
        <repository>
            <id>KPRO 09 Main repo</id>
            <url>http://kpro09.googlecode.com/svn/maven-repository</url>
            <releases/>
        </repository>
        <repository>
            <id>KPRO 09 snapshot repo</id>
            <url>http://kpro09.googlecode.com/svn/maven-snapshot-repository</url>
            <snapshots/>
        </repository>
    </repositories>

    <build>
        <scriptSourceDirectory>src/main/scala</scriptSourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
